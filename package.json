{
    "name": "nestjs-consul-service",
    "description": "NestJS service for Consul integration: service discovery, health checks, and KV store support",
    "author": {
        "name": "Serhii Pomazan",
        "email": "sergeypomazan2005@gmail.com"
    },
    "version": "1.0.0",
    "license": "MIT",
    "main": "dist/main.js",
    "scripts": {
        "build": "rimraf -rf dist && tsc -p tsconfig.json",
        "format": "prettier --write \"lib/**/*.ts\"",
        "lint": "eslint \"lib/**/*.ts\" --fix",
        "test": "jest"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.0",
        "axios": "^1.11.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/testing": "^11.0.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.2.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^30.0.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [ "js", "json", "ts" ],
        "rootDir": "lib",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
          "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}